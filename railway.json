{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "programs/article_summarizer_backend/Dockerfile",
    "dockerContext": "programs/article_summarizer_backend",
    "watchPatterns": ["programs/article_summarizer_backend/**"]
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
